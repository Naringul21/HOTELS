<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_style">
        <item name="android:lineHeight">17dp</item>
        <item name="android:textSize">20dp</item>
        <item name="fontFamily">@font/alata</item>
<!--        <item name="android:textStyle">bold</item>-->
        <item name="color">@color/text_color</item>
    </style>

    <style name="text_style_1">
        <item name="android:lineHeight">20dp</item>
        <item name="android:textSize">30dp</item>
        <item name="fontFamily">@font/alata</item>
        <item name="android:textStyle">bold</item>
        <item name="color">@color/black</item>
    </style>

    <style name="RatingBar"  parent="android:style/Widget.Material.RatingBar.Small">
        <item name="colorControlNormal">@color/text_with_color</item>
        <item name="colorControlActivated">@color/yellow</item>
    </style>

    <style name="button_style" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/toolbar_background1</item>
        <item name="android:gradientRadius" >3dp</item>
    </style>

    <style name="roundedImageView" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>

